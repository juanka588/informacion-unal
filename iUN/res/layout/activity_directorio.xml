<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayoutDirectorio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unal.iun.DirectorioActivity"
    tools:ignore="MergeRootFrame" >

    <Space
        android:id="@+id/SpaceDirectorio"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp" />


    <ListView
        android:id="@+id/listViewDirectorio"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" >
    </ListView>

   <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="bottom|center" >

        <ImageView
            android:id="@+id/imageMapaDirectorio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="right"
            android:onClick="ubicar"
            android:src="@drawable/mapa3" />

        <ImageView
            android:id="@+id/imageHomeDirectorio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="right"
            android:onClick="home"
            android:src="@drawable/homeun" />
    </TableRow>

</TableLayout>